@model List<Member>

@{
    ViewData["Title"] = "Home Page";
}

<div style="margin-bottom:8px">
    <a type="button" class="btn btn-success" style="margin-block-end:8px" asp-action="AddMember" asp-controller="Home">افزودن</a>
    <form asp-controller="Home" asp-action="Search">
        <input type="text" name="searchTxt" placeholder="Search...">
        <input type="submit" class="btn btn-primary" value="Search">
    </form>
</div>
<table>
    <tr>
        <th>شناسه</th>
        <th>نام</th>
        <th>نام خانوادگی</th>
        <th colspan="3">عملیات</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.FirstName</td>
            <td>@item.LastName</td>
            <td><a type="button" class="btn btn-primary" asp-action="Details" asp-controller="Home" asp-route-id="@item.Id">جزيیات</a></td>
            <td><a type="button" class="btn btn-warning" asp-action="Edit" asp-controller="Home" asp-route-id="@item.Id">ویرایش</a></td>
            <td><a type="button" class="btn btn-danger" asp-action="Delete" asp-controller="Home" asp-route-id="@item.Id">حذف</a></td>
        </tr>
    }
</table>

