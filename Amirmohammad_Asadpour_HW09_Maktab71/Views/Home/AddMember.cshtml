
@model Member

<html>

    <head>
        <style>
            body {
                direction: rtl;
            }
            input {
                margin-bottom: 8px;
            }
        </style>
    </head>
    
    
    <body>
        <form asp-controller="Home" asp-action="SubmitAddedMember">
            <label asp-for="NationalCode">National Code:</label><br>
            <input type="text" asp-for="NationalCode"><br>

            <label asp-for="FirstName">First Name:</label><br>
            <input type="text" asp-for="FirstName"><br>

            <label asp-for="LastName">Last Name:</label><br>
            <input type="text" asp-for="LastName"><br>
            
            <label asp-for="PhoneNumber">Phone Number:</label><br>
            <input type="text" asp-for="PhoneNumber"><br>

            <label asp-for="Gender">Gender:</label><br>
            <select asp-for="Gender" asp-items="@(new SelectList(Enum.GetValues(typeof(GenderType))))">
            </select><br>
            
            <label asp-for="MemberType">Member Type:</label><br>
            <select asp-for="MemberType" asp-items="@(new SelectList(Enum.GetValues(typeof(MembershipType))))">
            </select><br>
            
            <label asp-for="Birthday">Birthday:</label><br>
            <input type="date" asp-for="Birthday"><br>

            <input type="submit" class="btn btn-primary" value="Submit">
        </form>
        <br/><br/><br/>
        
    </body>

</html>
